<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arx8l.attendenceapp.MainMenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.15"
        android:scaleType="centerCrop"
        android:src="@drawable/jcu_background" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_frag"
        android:layout_width="match_parent"
        android:layout_height="580dp">

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/tap_in_tap_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            app:srcCompat="@drawable/attendance" />

        <ImageView
            android:id="@+id/check_my_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            app:srcCompat="@drawable/timer" />

        <ImageView
            android:id="@+id/medical_leave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"

            app:srcCompat="@drawable/prognosis" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"

            app:srcCompat="@drawable/settings" />


    </LinearLayout>

</RelativeLayout>