            android:layout_height="match_parent"
            android:background="@android:color/background_light">


            <RelativeLayout
                android:layout_marginTop="25dp"
                android:id="@+id/progress_bar_panel_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/statistic_panel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:layout_marginBottom="3dp">
                    <TextView
                        android:id="@+id/absence_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Absence: 3"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/attendance_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Attendance: 70%"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statistic_panel_1">

                    <RelativeLayout
                        android:id="@+id/progressbar_class_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/progress_1"
                            android:layout_width="280dp"
                            android:layout_height="50dp"
                            app:rcBackgroundColor="#02d609"
                            app:rcProgress="30"
                            app:rcRadius="10dp"
                            android:paddingStart="29dp"
                            app:rcProgressColor="#02d609" />

                        <TextView
                            android:id="@+id/class_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="CP 3405"
                            android:textColor="@android:color/white"
                            android:textSize="22dp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/progress_1"
                            android:layout_centerInParent="true">
                            <ImageView
                                android:id="@+id/warning_1"
                                android:layout_centerHorizontal="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/atentie" />
                        </RelativeLayout>

                    </RelativeLayout>




                </RelativeLayout>



