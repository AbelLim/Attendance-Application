<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jcu_background">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BAFFFFFF"
        />

    <EditText
        android:id="@+id/et_cer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/et_bg"
        android:hint="Enter Certificate No."
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/et_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_cer"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:text="Upload Photo"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_below="@id/et_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="27dp"
        android:background="@drawable/et_bg"
        android:layout_marginRight="27dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Peroid of Absence" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="select here"
            android:paddingRight="8dp"
            android:text="Select Here" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/ll_date"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/et_bg"
        android:gravity="start"
        android:hint="Your Reason..."
        android:padding="8dp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_below="@+id/et_reason"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/corner_submit"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>